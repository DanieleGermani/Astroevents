<h1><%= title %></h1>
<h1>Signup</h1>
<div class="jumbotron boxlogin container">
<form action="/signup" method="POST" id="form-container">
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder=" &#128273; You name">
  <br><br>
  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder=" &#128273; Your password">

  <% if (typeof message !== "undefined") { %>
    <div class="error-message"><%= message %></div>
  <% } %>
  <br><br>

  <button class="btn btn-success">Create account</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/login">Login</a>
  </p>
</form>
</div>
